<div className={styles.toggleContainer}>
  <div className={styles.toggleLabel}>Show Reasoning</div>
  <label className={styles.switch}>
    <input
      type="checkbox"
      checked={showReasoning}
      onChange={() => setShowReasoning(!showReasoning)}
    />
    <span className={styles.slider}>
      {showReasoning ? 'On' : 'Off'}
    </span>
  </label>
</div>
.toggleContainer {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-bottom: 10px;
  margin-right: 10px;
}

.toggleLabel {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 4px;
  color: #333;
}

.switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 30px;
}

.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  cursor: pointer;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: #ccc;
  transition: 0.4s;
  border-radius: 30px;
  font-size: 12px;
  font-weight: bold;
  color: white;
}

