<div className={styles.sessionHeader}>
  <h3>{selectedChat.chat_title}</h3>
  <button
    className={styles.deleteButton}
    onClick={() => handleDeleteSession(selectedChat.chat_id)}
  >
    Delete Session
  </button>
</div>


const handleDeleteSession = async (sessionId) => {
  if (!sessionId) return;

  const confirmed = window.confirm("Are you sure you want to delete this session?");
  if (!confirmed) return;

  try {
    const response = await fetch(`https://lumosusersessionmgmt-dev.aexp.com/deleteUserSession/${sessionId}`, {
      method: 'DELETE',
    });

    if (response.ok) {
      dispatch(setTogglePopup(true, 'Session deleted successfully.'));
      // Optionally: redirect user, clear chat state, or update session list
    } else {
      dispatch(setTogglePopup(true, 'Failed to delete session.'));
    }
  } catch (error) {
    dispatch(setTogglePopup(true, 'An error occurred while deleting the session.'));
    console.error('Delete session error:', error);
  }
};

.sessionHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem 1rem;
}

.deleteButton {
  background-color: #ff4d4f;
  color: white;
  border: none;
  padding: 0.4rem 0.8rem;
  cursor: pointer;
  border-radius: 4px;
  font-size: 0.9rem;
}

.deleteButton:hover {
  background-color: #d9363e;
}
