\n```\n\n replace this with this \n\n---\n\n
result = result
      .replace(/^```(?:markdown)?\s*/i, '')
      .replace(/\s*```$/g, '')
      .replace(/\\n/g, '\n')
      .replace(/\\t/g, '\t')
      .replace(/\\u2019/g, '’')
      .replace(/\\u201c/g, '“')
      .replace(/\\u201d/g, '”')
      .replace(/\\u2014/g, '—')
      .replace(/\\u2026/g, '…')
      .replace(/\\u00a0/g, ' ')
      .replace(/\\"/g, '"')
      .replace(/\\\\/g, '\\');

    return result.trim();
  };
