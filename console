  // Single radio input mode
      <input
        type="radio"
        name="documentSelection"
        id={`doc-${index}`}
        checked={
          isUploadedNewDocs
            ? doc.file_name === recentUploadedFileName
            : selectedDocuments.some((selectedDoc) => selectedDoc.file_id === doc.file_id)
        }
        onChange={() => addSelectedDocuments(doc)}
      />