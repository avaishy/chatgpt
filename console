// src/config.js

let API_BASE_URL = '';

const hostname = window?.location?.hostname;

if (hostname.includes('cfrassistant-dev')) {
  API_BASE_URL = 'https://lumosusersessionmgmt-dev.aexp.com';
} else if (hostname.includes('cfrassistant-qa')) {
  API_BASE_URL = 'https://lumosusersessionmgmt-qa.aexp.com';
} else {
  console.warn('Unknown environment, defaulting to dev');
  API_BASE_URL = 'https://lumosusersessionmgmt-dev.aexp.com';
}

export const CONFIG = {
  API_BASE_URL,
};


import { CONFIG } from '../config'; // Adjust path as needed

dispatch(setIsTyping(true));
const res = await fetch(`${CONFIG.API_BASE_URL}/fetchLLMResponse`, {
  method: 'POST',
  body: JSON.stringify(data),
  headers: { 'Content-Type': 'application/json' },
});


export const CONFIG = {
  API_BASE_URL,
  ENV: hostname.includes('qa') ? 'qa' : 'dev',
}

const getDynamicLogoutUrl = () => {
    const target = encodeURIComponent(window.location.origin);
    const authUrl = `https://ssoisvc-dev.aexp.com/ssoi/auth?channel=use-authblue-sso@2.1.0&target=${target}`;
    return `https://ssoisvc-dev.aexp.com/ssoi/logoff?ssourl=${encodeURIComponent(authUrl)}`;
  };
