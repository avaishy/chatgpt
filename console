 Return values from promise executor functions cannot be read 
// 🔁 Fire the request (DON'T await here)
const manageContextPromise = fetch(`${CONFIG.API_BASE_URL}/manageChatContext`, {
          method: 'POST',
          body: JSON.stringify(body),
          headers: { 'Content-Type': 'application/json' },
        });

        await new Promise((resolve) => setTimeout(resolve, 1000));
        dispatch(setRefressCurrentSession(true));
        dispatch(setRefressPreviousSession(true));

        const res = await manageContextPromise;

if (res.ok) {
  const result = await res.json();
  if (result.status === 'Success') {
    // Continue success logic
    toast.success('Updated Successfully');
  } else {
    toast.error('Something went wrong: Invalid Inputs');
  }
} else {
  toast.error('Something went wrong while updating context');
}
